@using Microsoft.AspNetCore.Identity
@using EventBooking.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Manage" title="Manage">
                <i class="fas fa-user me-1"></i>Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-white">
                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                <i class="fas fa-user-plus me-1"></i>Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i>Login
            </a>
        </li>
    }
</ul>
