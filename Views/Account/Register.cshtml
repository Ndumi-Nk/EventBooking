@model EventBooking.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register - EventBooking Pro";
    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .card-header h2,
    .card-header p,
    .form-label,
    .form-check-label,
    .text-muted {
        color: #333 !important;
        font-weight: 500;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .form-control {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }

    .form-floating label {
        font-size: 0.9rem;
        color: #555 !important;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a67d8, #6b46c1);
            transform: translateY(-2px);
            box-shadow: 0px 4px 12px rgba(118, 75, 162, 0.4);
        }

    .btn-outline-danger {
        border-width: 2px;
    }

    .text-muted {
        font-size: 0.95rem;
        color: #555 !important;
    }

    .form-control:focus {
        border-color: #764ba2;
        box-shadow: 0 0 5px rgba(118, 75, 162, 0.5);
    }

    .validation-summary-errors,
    .text-danger {
        font-size: 0.85rem;
        font-weight: 500;
    }
</style>

<div class="container-fluid vh-100 d-flex justify-content-center align-items-center" style="background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);">
    <div class="col-md-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-gradient-primary text-white text-center py-4">
                <div class="d-flex justify-content-center mb-3">
                    <div class="rounded-circle bg-white p-3" style="width:80px;height:80px;">
                        <i class="fas fa-calendar-check fa-2x text-primary"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-0">Join EventBooking Pro</h2>
                <p class="mb-0 opacity-75">Create your account to start booking events</p>
            </div>
            <div class="card-body p-5">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Validation summary (top) -->
                    @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3 fw-bold" })

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control rounded-3", placeholder = "First Name" })
                                @Html.LabelFor(m => m.FirstName)
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control rounded-3", placeholder = "Last Name" })
                                @Html.LabelFor(m => m.LastName)
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small" })
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control rounded-3", placeholder = "Address" })
                            @Html.LabelFor(m => m.Address)
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control rounded-3", placeholder = "Phone Number", type = "tel" })
                            @Html.LabelFor(m => m.PhoneNumber)
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-3", placeholder = "Email", type = "email" })
                            @Html.LabelFor(m => m.Email)
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-floating">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-3", placeholder = "Password" })
                            @Html.LabelFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-floating">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rounded-3", placeholder = "Confirm Password" })
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 py-3 fw-bold">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </button>
                }

                <div class="text-center mt-4">
                    <p class="text-muted">Or sign up with</p>
                    @using (Html.BeginForm("GoogleLogin", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-lg rounded-3 py-3 fw-bold">
                            <i class="fab fa-google me-2"></i>Continue with Google
                        </button>
                    }
                </div>

                <div class="text-center mt-4 pt-3 border-top">
                    <p class="text-muted">
                        Already have an account?
                        @using (Html.BeginForm("Login", "Account", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-link text-primary fw-bold text-decoration-none p-0 m-0">Sign In</button>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
