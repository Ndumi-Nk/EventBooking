@model EventBooking.Models.AdditionalService

@{
   
    Layout = "_Layout";
}
<div class="container py-5">
    <h2>Service Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ServiceName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Price Type</dt>
        <dd class="col-sm-10">@Model.PriceType</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@((Model.IsActive) ? "Active" : "Inactive")</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" width="150" />
            }
            else
            {
                <span>No image uploaded</span>
            }
        </dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
