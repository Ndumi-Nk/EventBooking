@model IEnumerable<EventBooking.Models.PackageBooking>

@{
    ViewData["Title"] = "My Bookings";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-primary mb-2">My Bookings</h2>
        <div class="d-flex gap-2 flex-wrap">
            <select id="statusFilter" class="form-select">
                <option value="">All Status</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Declined">Declined</option>
            </select>
            <input type="text" id="searchBox" class="form-control" placeholder="Search Event or Package..." />
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-info-circle me-2"></i> You have not made any bookings yet.
        </div>
    }
    else
    {
        <div class="row g-4" id="bookingsContainer">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 col-lg-4 booking-card"
                     data-event="@booking.Package.Event.EventName.ToLower()"
                     data-package="@booking.Package.PackageName.ToLower()"
                     data-status="@booking.Status.ToString().ToLower()">

                    <div class="card shadow-sm rounded-4 h-100">
                        <!-- Card Header -->
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar-event me-2"></i>@booking.Package.Event.EventName</span>
                            <span class="badge @(booking.Status == EventBooking.Models.BookingStatuss.Pending ? "bg-warning text-dark" :
                                                                                    booking.Status == EventBooking.Models.BookingStatuss.Approved ? "bg-success" : "bg-danger")">
                        @booking.Status
                    </span>
                </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-gift-fill me-2"></i>@booking.Package.PackageName</h5>
                            <p class="mb-1"><i class="bi bi-calendar2-date me-2"></i>@booking.BookingDate.ToString("dddd, dd MMM yyyy")</p>
                            <p class="mb-1"><i class="bi bi-people-fill me-2"></i>@booking.NumberOfPeople</p>
                            <p class="mb-0"><i class="bi bi-clock-fill me-2"></i>@booking.CreatedAt.ToString("dd MMM yyyy")</p>
                        </div>
                        <!-- Card Footer -->
                        <div class="card-footer bg-white text-end">
                    @using (Html.BeginForm("Summary", "Package", FormMethod.Get))
                            {
                                @Html.Hidden("id", booking.PackageBookingId)
                                <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                                    <i class="bi bi-eye-fill me-1"></i> View
                                </button>
                            }

                            @* Show Pay button only if Approved *@
                            @if (booking.Status == EventBooking.Models.BookingStatuss.Approved)
                            {
                                <a href="@Url.Action("Pay", "Payments", new { bookingId = booking.PackageBookingId })"
                                   class="btn btn-sm btn-success rounded-pill ms-2">
                                    <i class="bi bi-credit-card-fill me-1"></i> Pay Now
                                </a>
                            }

                            @* Show Cancel button only if Pending *@
                            @if (booking.Status == EventBooking.Models.BookingStatuss.Pending)
                            {
                                @using (Html.BeginForm("CancelBooking", "Package", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", booking.PackageBookingId)

                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill ms-2"
                                            onclick="return confirm('Are you sure you want to cancel this booking?');">
                                        <i class="bi bi-x-circle-fill me-1"></i> Cancel
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
                
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const statusFilter = document.getElementById("statusFilter");
            const searchBox = document.getElementById("searchBox");
            const cards = document.querySelectorAll(".booking-card");

            function filterCards() {
                const statusValue = statusFilter.value.toLowerCase();
                const searchValue = searchBox.value.toLowerCase();

                cards.forEach(card => {
                    const eventName = card.dataset.event;
                    const packageName = card.dataset.package;
                    const statusText = card.dataset.status;

                    const matchesStatus = !statusValue || statusText.includes(statusValue);
                    const matchesSearch = !searchValue || eventName.includes(searchValue) || packageName.includes(searchValue);

                    card.style.display = (matchesStatus && matchesSearch) ? "" : "none";
                });
            }

            statusFilter.addEventListener("change", filterCards);
            searchBox.addEventListener("keyup", filterCards);
        });
    </script>
}

@section Styles {
    <style>
        /* Card Hover */
        .booking-card .card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .booking-card .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

        /* Card Content */
        .card-title {
            font-size: 1.15rem;
            font-weight: 600;
        }

        .card-text {
            font-size: 0.95rem;
        }

        .card-body i {
            color: #0d6efd;
        }

        /* Badges */
        .badge {
            font-size: 0.85rem;
            padding: 0.45em 0.75em;
        }

        /* Responsive Filters */
        #statusFilter, #searchBox {
            min-width: 150px;
        }

        @@media (max-width: 576px) {
            .d-flex.gap-2.flex-wrap

        {
            flex-direction: column;
            gap: 0.5rem;
        }

        }
    </style>
}
