@model EventBooking.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-lg-8">
            <h1 class="fw-bold text-primary mb-3">Contact Us</h1>
            <p class="lead text-muted">
                Have questions or need assistance? Send us a message and we will get back to you as soon as possible.
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Contact Form -->
        <div class="col-lg-6 mb-5">
            <div class="card shadow-lg rounded-4 p-4 border-0">
                <h3 class="mb-4 fw-bold text-center">Send a Message</h3>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Subject, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Message, new { @class = "form-label fw-semibold" })
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 5, placeholder = "Write your message..." })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                            <i class="bi bi-envelope-fill me-2"></i> Send Message
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Contact Info -->
        <div class="col-lg-4">
            <div class="card shadow-sm rounded-4 p-4 border-0 mb-4">
                <h4 class="fw-bold mb-3">Contact Information</h4>
                <p><i class="bi bi-geo-alt-fill me-2 text-primary"></i>123 Durban Street, Durban, South Africa</p>
                <p><i class="bi bi-telephone-fill me-2 text-primary"></i>+27 123 456 789</p>
                <p><i class="bi bi-envelope-fill me-2 text-primary"></i>support@eventbooking.com</p>
                <p><i class="bi bi-clock-fill me-2 text-primary"></i>Mon – Fri: 9am – 6pm</p>
            </div>

            <!-- Optional Map -->
            <div class="card shadow-sm rounded-4 overflow-hidden border-0">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3303.1563451234!2d31.0216!3d-29.858!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1ef7aa1b2c6d1d5d%3A0x123456789abcdef!2sDurban%20City!5e0!3m2!1sen!2sza!4v1690000000000!5m2!1sen!2sza"
                        width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @@Scripts.Render("~/bundles/jqueryval")
}
