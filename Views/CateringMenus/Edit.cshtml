@model EventBooking.Models.CateringMenu
@{
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="text-primary fw-bold mb-4">Edit Catering Menu</h2>

    @using (Html.BeginForm("Edit", "CateringMenus", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MenuId)

        <div class="mb-3">
            @Html.LabelFor(m => m.MenuName, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.MenuName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MenuName, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.PricePerPerson, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.PricePerPerson, new { @class = "form-control", type = "number", step = "0.01" })
            @Html.ValidationMessageFor(m => m.PricePerPerson, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Description, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label>
            <div class="mb-2">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.MenuName" class="img-thumbnail" style="width:150px; height:150px; object-fit:cover;">
                }
                else
                {
                    <span class="text-muted">No image</span>
                }
            </div>
            <label for="imageFile" class="form-label">Change Image</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*">
        </div>

        <button type="submit" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Save Changes
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    }
</div>
