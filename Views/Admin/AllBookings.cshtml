@model IEnumerable<EventBooking.ViewModels.UnifiedBookingViewModel>

@{
    ViewData["Title"] = "All Bookings";
    Layout = "_Layout";
}

<div class="container py-5">
    <h1 class="mb-4"><i class="fas fa-calendar-check me-2"></i>All Bookings</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Event / Package</th>
                    <th>User</th>
                    <th>Number of People</th>
                    <th>Status</th>
                    <th>Booking Date</th>
                    <th>Total Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int index = 1;
                    foreach (var booking in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@booking.BookingType</td>
                            <td>@booking.EventOrPackageName</td>
                            <td>@booking.UserName</td>
                            <td>@booking.NumberOfPeople</td>
                            <td>
                                <span class="badge @(booking.Status == "Approved" ? "bg-success" : booking.Status == "Pending" ? "bg-warning text-dark" : "bg-secondary")">
                                    @booking.Status
                                </span>
                            </td>
                            <td>@booking.BookingDate.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@booking.TotalAmount.ToString("C")</td>
                            <td>
                                @(booking.BookingType == "Event"
                                                        ? booking.EventStartTime?.ToString("MMM dd, yyyy HH:mm")
                                                        : "-")
                                                          </td>
                                                          <td>
                                @(booking.BookingType == "Event"
                                                        ? booking.EventEndTime?.ToString("MMM dd, yyyy HH:mm")
                                                        : "-")
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i> View
                        </a>

                        @if (booking.Status == "Pending")
                                {
                                    @using (Html.BeginForm(
                                                            "CancelBooking",
                                                            "Bookings",
                                                            new { id = booking.BookingId },
                                                            FormMethod.Post,
                                                            null, // antiforgery
                                                            new { @class = "d-inline", onsubmit = "return confirm('Are you sure you want to cancel this booking?');" }))
                                    {
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-times"></i> Reject Booking
                                        </button>
                                    }

                                }
                            </td>

                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="text-center">No bookings found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
